<div class="small-12 large-10 columns nopadding tagsContent" ng-controller="settingsCtrl">
    <div class="page-title noshadow" style="padding-left: 25px;">
        <p class="left">{{title}}</p>
        <div class="uk-float-right">
            <div class="pagination uk-float-left">
                <ul class="button-group uk-float-left">
                    <li class="pagination relative">
                        <div class="right" data-uk-dropdown="{pos: 'bottom-right', mode: 'click'}" aria-haspopup="true" aria-expanded="false">
                            <a href="#" class="btn no-ajaxy" data-notifications="ticket-actions" style="border-radius: 3px;"><i class="fa fa-large fa-tasks"></i></a>
                            <div class="uk-dropdown uk-dropdown-xsmall uk-dropdown-bottom">
                                <ul class="uk-nav">
                                    <li>
                                        <a href="#" role="button" ng-click="createTicketType($event)">Create</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="full-height page-content no-border-top" style="position: relative;">
        <div class="ticketTypeList full-height">
            <table id="ticketTypesTable" class="pDataTable stripe">
                <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th style="text-align: right; padding-right: 25px;">Ticket Count</th>
                </tr>
                </thead>
                <tbody>
                {{#each data.types}}
                    <tr ng-click="editType($event)" data-tagOId="{{type._id}}">
                        <td>
                            <input id="c_{{type._id}}" type="checkbox" class="poloCheckbox"/>
                            <label for="c_{{type._id}}"></label>
                        </td>
                        <td>{{type.name}}</td>
                        <td style="text-align: right; padding-right: 25px;">{{count}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{#contentFor 'js-plugins'}}

{{/contentFor}}