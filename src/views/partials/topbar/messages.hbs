<div id="mail-notifications" data-scroll="mail-Messages" class="notifications p-dropdown">
    <div class="actions">
        <a href="/messages/inbox" class="blackLink">Inbox</a>
        <div class="right"><a href="#" class="eh-sendNewMessage hoverUnderline no-ajaxy" ng-click="openNewMessageWindow($event)">Send a New Message</a></div>
    </div>
    <div id="mail-Messages" class="mail-Messages close-on-click">
        <ul>
            {{#each data.common.messages.unreadItems}}
                <li>
                    <a class="messageNotification" href="/messages/{{_id}}" role="button">
                        <div class="clearfix">
                            {{#if from.image}}
                                <div class="profilePic left"><img src="/uploads/users/{{from.image}}" alt="profile"/></div>
                            {{else}}
                                <div class="profilePic left"><img src="/uploads/users/defaultProfile.jpg" alt="profile"/></div>
                            {{/if}}
                            <div class="messageAuthor"><strong>{{from.fullname}}</strong></div>
                            <div class="messageSnippet">
                                <span>{{subject}}</span>
                            </div>
                            <div class="messageDate">
                                <time datetime="{{formatDate date "YYYY-MM-DDThh:mm"}}" class="timestamp">{{formatDate date "MMM DD"}}</time>
                            </div>
                        </div>
                    </a>
                </li>
            {{/each}}
        </ul>
    </div>
</div>